<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back_alert_round"
    android:backgroundTint="@color/White"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koki Bertugas"
        android:textColor="@color/Gray800"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_17sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih salah satu koki yang bertugas memasak."
        android:textColor="@color/Gray700"
        android:textSize="@dimen/_8ssp"
        android:textAlignment="textStart"
        android:fontFamily="@font/sans_ui"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_17sdp"/>

    <Spinner
        android:id="@+id/spNamaKoki"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:spinnerMode="dropdown"
        android:theme="@style/spinner_style_tablet"
        android:background="@drawable/back_spinner"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Gray300"
                    android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/pilihKoki"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:layout_weight="1"
        android:background="@color/White100T"
        android:textColor="@color/Gray500"
        android:text="Pilih"
        android:textAllCaps="false"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

</LinearLayout>